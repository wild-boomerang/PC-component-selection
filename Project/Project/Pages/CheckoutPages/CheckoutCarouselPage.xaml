        <StackLayout>
            <views:DeliveryAddressesPlugin SubmitEvent="UserInfoRequest" />
        </StackLayout>
    </ContentPage>

    <ContentPage>
        <StackLayout>
            <views:PaymentMethodPlugin SubmitEvent="PaymentForward" CancelEvent="PaymentBack" />
        </StackLayout>
    </ContentPage>

